<LinearLayout
    android:background="#fafafa"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.interviewpractice.ui.fragment.MineFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="230dp">
    <ImageView
        android:src="@mipmap/skybg"
        android:id="@+id/iv_cover_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_below="@+id/iv_cover_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:src="@mipmap/skybg"
        android:clickable="true"
        android:id="@+id/iv_head"
        app:qmui_border_color="#FFFFFF"
        app:qmui_border_width="3px"
        app:qmui_corner_radius="15dp"
        app:qmui_selected_border_color="?attr/qmui_config_color_gray_4"
        app:qmui_selected_border_width="1px"
        app:qmui_selected_mask_color="?attr/qmui_config_color_gray_8"/>
    <TextView
        android:id="@+id/name"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_head"
        android:text="Yu Wo Ambrose"
        android:textStyle="bold"
        android:textColor="#4b484a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <com.qmuiteam.qmui.widget.grouplist.QMUIGroupListView
        android:id="@+id/groupListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:foreground="?android:attr/selectableItemBackground"
        app:qmui_backgroundColor="#ffffff"
        android:id="@+id/exit"
        app:qmui_radiusBottomLeft="5dp"
        app:qmui_radiusBottomRight="5dp"
        app:qmui_radiusTopLeft="5dp"
        app:qmui_radiusTopRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textSize="18dp"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:text="退出应用"
        android:textColor="#1d1c18"
        app:qmui_borderColor="#FFFFFF"
        app:qmui_borderWidth="2px"/>
</LinearLayout>
