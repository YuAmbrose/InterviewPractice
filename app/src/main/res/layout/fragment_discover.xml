<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.interviewpractice.ui.fragment.DiscoverFragment">
    <LinearLayout
        android:id="@+id/barlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<android.support.v7.widget.Toolbar
    android:background="@color/colorThem"
    android:id="@+id/discover_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="发现"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.v7.widget.Toolbar>
    </LinearLayout>
    <LinearLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.design.widget.TabLayout
    android:id="@+id/ranklisttablayout"
    app:tabIndicatorHeight="3dp"
    app:tabSelectedTextColor="#498e79"
    app:tabGravity="center"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    app:tabIndicatorColor="#498e79"/>
    <android.support.v4.view.ViewPager
    android:id="@+id/ranklistviewpager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="#ffffff"/>
    </LinearLayout>
</LinearLayout>
