<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.interviewpractice.ui.activity.SearchActivity">
    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout

    android:layout_marginLeft="35dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.SearchView
    android:id="@+id/searchEdit"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="5dp"
    android:background="@drawable/search_selector"></android.support.v7.widget.SearchView>
</LinearLayout>
    </com.qmuiteam.qmui.widget.QMUITopBar>

    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/layout_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hot"
        android:layout_marginTop="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:container_background_color="@color/app_bar_color"
        app:container_border_color="@color/app_bar_color"
        app:container_enable_drag="false"
        app:container_gravity="center"
        app:horizontal_interval="8dp"
        app:tag_background_color="@color/detail_bg2"
        app:tag_border_color="@color/white"
        app:tag_clickable="true"
        app:tag_text_color="@color/white"
        app:vertical_interval="8dp" />
    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/select_recycler"
        android:nestedScrollingEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
